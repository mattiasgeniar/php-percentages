{
    "name": "mattiasgeniar/php-percentages",
    "description": "A clean interface to calculate percentages in PHP: changes between values, percentage increases, partial values, ...",
    "keywords": [
        "mattiasgeniar",
        "php-percentages"
    ],
    "homepage": "https://github.com/mattiasgeniar/php-percentages",
    "license": "MIT",
    "authors": [
        {
            "name": "Mattias Geniar",
            "email": "m@ttias.be",
            "homepage": "https://ma.ttias.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "5.*",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mattiasgeniar\\Percentage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mattiasgeniar\\Percentage\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
